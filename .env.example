# Local Writing Assistant Configuration
# Copy this file to .env and customize as needed

# Security token for API authentication
LOCAL_API_TOKEN=your-secure-random-token-here

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# LanguageTool configuration
LT_LANGUAGE=en-US
LT_PORT=8010

# Model configuration
WHISPER_MODEL=base.en
WHISPER_COMPUTE_TYPE=int8

# Logging level
LOG_LEVEL=INFO

# Cache directories
MODELS_DIR=server/models
CACHE_DIR=.cache
