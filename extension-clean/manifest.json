{
  "manifest_version": 3,
  "name": "Local Writing Assistant",
  "version": "1.0.0",
  "description": "Privacy-first, offline writing assistant",

  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://127.0.0.1:8001/*",
    "http://localhost:8001/*"
  ],

  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Local Writing Assistant"
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self';"
  }
}
